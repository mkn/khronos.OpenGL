<?xml version="1.0" encoding="UTF-8" ?>
<maiken>
	<properties>
		<github>http://www.github.com/Dekken</github>
		<git>${github}/gl.gl.git</git>
	</properties>
	<project>
		<name>gl.gl</name>
		<version>master</version>
		<scr scm="git">${git}</scr>
	</project>
	<profiles>
		<profile name="c">
			<includes>
				<include>./inc</include>
			</includes>
		</profile>
		<profile name="bsd" parent="c" os="bsd">
			<libraries>
				<library>GL</library>
			</libraries>
		</profile>
		<profile name="nix" parent="c" os="nix">
			<libraries>
				<library>GL</library>
			</libraries>
		</profile>
		<profile name="win" parent="c" os="win">
			<libraries>
				<library>opengl32</library>
			</libraries>
		</profile>
	</profiles>
</maiken>
